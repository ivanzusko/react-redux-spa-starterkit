{
  "extends": "react-app",
  "rules": {
    "array-bracket-spacing": [
      "warn",
      "never"
    ],
    "arrow-spacing": "warn",
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
    "comma-spacing": [
      "warn",
      {
        "before": false,
        "after": true
      }
    ],
    "brace-style": [
      "warn",
      "stroustrup"
    ],
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "jsx-quotes": [
      "warn",
      "prefer-double"
    ],
    "no-multiple-empty-lines": ["warn", { "max": 1 }],
    "no-new-func": "warn",
    "no-underscore-dangle": "warn",
    "no-unneeded-ternary": "warn",
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "one-var": [
      "warn",
      "never"
    ],
    "prefer-const": "warn",
    "prefer-template": "warn",
    "require-jsdoc": [
      "warn",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": false,
          "ClassDeclaration": false
        }
      }
    ],
    "semi": [
      "warn"
    ],
    "space-before-blocks": "warn",
    "space-before-function-paren": ["warn", "never"],
    "space-in-parens": [
      "warn",
      "never"
    ],
    "space-infix-ops": "warn",
    "spaced-comment": [
      "warn",
      "always"
    ]
  }
}
